@model PoliticImpact.Models.CaseItem

@{
    ViewBag.Title = "Detaljer";
    Layout = "~/Views/Shared/_LayoutNoPageDiv.cshtml";
}

@section scripts{

    @*@Scripts.Render("~/Scripts/facebookPublish.js")
