@model PoliticImpact.Models.CaseItem
@{
    ViewBag.Title = @Model.Title;
}

<h2>@Model.Title</h2>
<h4>Förslagsbeskrivning: </h4> @Model.Text <br>
<h4>Skapad: </h4> @Model.Created <br>
<h4>Deadline: </h4> @Model.Deadline <br>
<h4>Statistik:</h4>
    <b>Antal gillanden:</b> @ViewBag.numberOfLikes<br>
    <b>Antal underskrifter:</b> @ViewBag.numberOfSignUps<br>
    <b>Antal röster:</b> @ViewBag.numberOfVotes<br>



@if (ViewBag.nrOfComments == 0)
{
    <b>Antal kommentarer: 0</b><br>
}
else
{
    <b>Totalt antal kommentarer:</b> @ViewBag.nrOfComments<br>
    if (ViewBag.nrOfComments > 5)
    {
        <b>Förslagets 5 senaste kommentarer:</b><br>
        int i = 0;
        foreach (var comment in ViewBag.casecomments)
        {
        <p>@comment.commentStr</p>
            i++;
            if (i >= 5)
            {
                break;
            }

        }
    }
    else
    {
        <b>Förslagets @ViewBag.nrOfComments kommentarer:</b><br>
        foreach (var comment in ViewBag.casecomments)
        {
        <p>@comment.commentStr</p>
        }
    }  
    
    
}



